cabal-version:      2.4
name:               testing-system
version:            0.1.0.0
author:             amhsm6
maintainer:         amhsm6@gmail.com

executable testing-system
    main-is:          Main.hs

    other-modules:    Tester
                      Database
                      Control.Monad.Either

    build-depends:    base ^>=4.16.4.0
                    , mtl
                    , stm
                    , text
                    , time
                    , aeson
                    , process
                    , directory
                    , filepath
                    , servant-server
                    , servant-websockets
                    , websockets
                    , warp
                    , HDBC
                    , HDBC-sqlite3

    hs-source-dirs:   app

    default-language: Haskell2010

    ghc-options:      -Wall -Wextra
